// @harness typecheck_validation_succeeds
// @harness cfg_integrity_validation_succeeds
// @harness ssa_validation_succeeds
(mir
    (func count_to_n
        (return_type int)
        (captures_type unit)
        (entry block0)
        (block block0
            (param captures (mref unit))
            (param n int)
            (constant i (0))
            (jump (loop (i n))))
        (block loop
            (param i_current int)
            (param n_r0 int)
            (int.cmp t0 (>= i_current n_r0))
            (branch (t0
                (true exit (i_current))
                (false loop_body (i_current n_r0)))))
        (block loop_body
            (param i_current_r1 int)
            (param n_r1 int)
            (constant one (1))
            (int.add i_current_r2 (i_current_r1 one))
            (jump (loop (i_current_r2 n_r1))))
        (block exit
            (param i_current_r3 int)
            (return (i_current_r3)))))
